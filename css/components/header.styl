/* Hamburger */
header {
	.hamburger-inner, .hamburger-inner:after, .hamburger-inner:before {
		background-color: #fff;
	}
}


/* default */
header {
	background var(--color-dark);
	position: relative;
	padding: 10px 0;
	z-index: 999;
    height: 150px;
	.container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 100%;
	}
	.logo {
		position: absolute; 
		top: 5px;
		color: var(--links_header);
		width: 220px;
		a {
			font-size: 0;
			color: var(--links_header);
			font-weight: lighter;
			&:before {
				content: '';
				background-image: url(../../img/logo.png);
				display: block;
				width: 190px;
				left: 0;
				height: 100px;
				background-size: cover;
				background-position: center;
				position: absolute;
				top: -56px;
			}
		}
	}
	.nav {
		width: 100%;
		.hamburger {
			float: right;
			padding-right: 0;
		}
		nav {
			text-align: right;
		}
		&-list {
			width: 100%;
			li {
				position: relative;
				line-height: 35px;
				a {
					text-transform: uppercase;
					font-size: 13px;
					font-weight: bolder;
					color: var(--links_header);
					cursor: pointer;
					padding: 10px;
				}
				&:hover {
					background: color_theme_dark;
				}
			}
		}
		&-submenu {
			display: none;
			background-color: color_theme_dark;
			border-bottom: 4px solid color_theme;
			border-top: 1px solid #ccc
			li {
				display: block;
				border-bottom: 1px solid #ccc
				&:hover {
					background: transparent;
				}
				a {
					display: block;
					text-transform: capitalize;
					padding: 0 10px;
					position: relative;
					left: 0;
					transition: all 0.3s ease;
					&:hover {
						left: 10px;
					}
				}
			}
		}
		&-haschild {
			&:hover {
				border-radius: 0;
				.nav-submenu {
					display: block;
				}
			}
		}
	}

	.nav-content {
		display: none;
	}
}

@media screen and (min-width: sm) {
	header {
		// height: 70px;
		.container {
			align-items: center;
			.logo {
				position: relative;
				top: 0px;
			}
		}
		.nav {
			width: auto;
			nav {
				text-align: left;
			}
			.hamburger {
				display: none;
			}
			&-list {
				li {
					display: inline-block;
				}
			}
			&-submenu {
				width: 220px;
				position: absolute;
				li {
					display: block;
				}
			}
		}
		.nav-content {
			display: inline-block;
		}
	}
}
